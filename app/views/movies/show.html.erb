<%= image_tag @movie.image.url(:medium) %>


<p>
  <strong>Title:</strong>
  <%= @movie.Title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.Description %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @movie.Duration %>
</p>

<p>
  <strong>Actor:</strong>
  <%= @movie.Actor %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.Rating %>
</p>

<%= link_to "Write a review", new_movie_review_path(@movie) %>

<h1 class="title"><%= @movie.Title %> </h1>
<p class="description"><%= @movie.Description %> </p>

<% if @reviews.blank? %>
  <h3> No review Yet </h3>
  <%= link_to "Write a review", new_movie_review_path(@movie) %>
<% else %>
 <% @reviews.each do |review| %>
 <div class="review">
 <div class="star-rating" data-score= <%= review.rating %> > <%= review.user.email %></div>
 <p><%= review.comment %> </p>
  <p> <%= current_user.id %> review <%= review.user_id %> </p>
 
 <% if user_signed_in?  && current_user.id == review.user_id  %>  </p>
 <p> <%= link_to 'Edit', edit_movie_review_path(@movie, review.id) %></p>
 <%= link_to 'Delete', movie_review_path(@movie, review.id), method: :delete, data: { confirm: 'Are you sure?' } %>
 <% end %>
 </div>
 <% end %>
 <% end %>


  <% if user_signed_in?  %>
        <% if current_user.id == 1 %>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
<% end %>
<% end %>

<script>
  $('.star-rating').raty({
    path:'/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>