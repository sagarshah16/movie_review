
<div class="btn-group pull-right">
       <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
        Z to A <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "A to Z", asort_movies_path %></li>
        <li><%= link_to "Z to A", dsort_movies_path %></li>
        <li><%= link_to "link3", "#",{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
        <li class="divider"></li>
        <li><%= link_to "link4", "#",{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
      </ul>
    </div>

<h1>Listing Movies</h1>

<div class="row">
<% i=0 %>
    <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
       <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
       </div>
        <%= link_to movie.Title, movie, class: "caption" %>
       <div class="star-rating" data-score= <%= @avg_review[i] %> > </div>
       <% i += 1   %>
        </div>
    <% end %>
 
</div>

<script>
  $('.star-rating').raty({
    path:'/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>